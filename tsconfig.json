{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "~pages": ["./src/pages"],
      "~commons": ["./src/commons"],
      "~hooks": ["./src/hooks"],
      "~utils": ["./src/commons/utils"],
      "~states": ["./src/commons/states"],
      "~constants": ["./src/commons/constants"],
      "~constants/interfaces": ["./src/commons/constants/interfaces"],
      "~interfaces/*": ["./src/commons/interfaces/*"],
      "~toast": ["./src/commons/toast"],
      "~theme": ["./src/commons/styles/theme.ts"],
      "~i18n": ["./src/commons/i18n"],
      "~components": ["./src/components"],
      "~providers": ["./src/providers"],
      "~tests": ["./src/tests"]
    }
  },
  "include": ["src", "setup-tests.ts"]
}
